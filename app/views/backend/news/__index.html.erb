<h1>Backend News</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @backend_news.each do |backend_news| %>
      <tr>
        <td><%= link_to 'Show', backend_news %></td>
        <td><%= link_to 'Edit', edit_backend_news_path(backend_news) %></td>
        <td><%= link_to 'Destroy', backend_news, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

